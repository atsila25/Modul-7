public class No6 {
    //method rekursif
    static long faktorial (long f){
        if (f<=1){//kondisi terpenuhi untuk akhir rekursif
            return 1;
        }else{//step rekursif, pemanggilan kembali method faktorial
            return f*faktorial(f-1);
        }
    }
    public static void main(String[] args) {//pemanggilan awal method faktorial
        System.out.println("Faktorial 10 = "+faktorial(10));
    }
}
